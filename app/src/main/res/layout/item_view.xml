<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_game"
    android:background="@drawable/stars">

    <ImageView
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:id="@+id/imageView"
        android:layout_gravity="center"
        android:src="@drawable/spring">
    </ImageView>
    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:paddingTop="50dp"
        android:textColor="#ffe75c"
        android:text="This is the question and it can be kinda long so I want to make sure that when it appears on screen its not bad."/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/answer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is answer 1"
            android:textSize="14sp"
            android:layout_weight="4"
            android:textColor="#ffe75c"/>
        <TextView
            android:id="@+id/answer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is answer 2"
            android:textSize="14sp"
            android:layout_weight="4"
            android:textColor="#ffe75c"/>
        <TextView
            android:id="@+id/answer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is answer 3"
            android:textSize="14sp"
            android:layout_weight="4"
            android:textColor="#ffe75c"/>
        <TextView
            android:id="@+id/answer4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is answer 4"
            android:textSize="14sp"
            android:layout_weight="4"
            android:textColor="#ffe75c"/>
        <TextView
            android:id="@+id/answer5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is answer 5"
            android:textSize="14sp"
            android:layout_weight="4"
            android:textColor="#ffe75c"/>
    </LinearLayout>
        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/button_answer1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:buttonTint="#D6BF66"
                android:text="A"
                android:textColor="#D6BF66" />

            <RadioButton
                android:id="@+id/button_answer2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:textColor="#D6BF66"
                android:text="B"
                android:buttonTint="#D6BF66"/>

            <RadioButton
                android:id="@+id/button_answer3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:textColor="#D6BF66"
                android:text="C"
                android:buttonTint="#D6BF66"/>

            <RadioButton
                android:id="@+id/button_answer4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:textColor="#D6BF66"
                android:text="D"
                android:buttonTint="#D6BF66"/>

            <RadioButton
                android:id="@+id/button_answer5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:textColor="#D6BF66"
                android:text="E"
                android:buttonTint="#D6BF66"/>
        </RadioGroup>

</LinearLayout>